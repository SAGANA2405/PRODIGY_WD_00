<body>
    <div class="container">
        <h1>Weather App</h1>
        <input type="text" id="locationInput" placeholder="Enter city name">
        <button id="fetchWeather">Get Weather</button>
        <button id="fetchCurrentLocation">Get Current Location Weather</button>
        <div id="weatherInfo">
            <p id="location"></p>
            <p id="temperature"></p>
            <p id="conditions"></p>
            <p id="humidity"></p>
        </div>
    </div>
    <script src="script.js"></script>
